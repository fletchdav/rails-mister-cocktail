<%= render 'shared/navbar' %>
<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <h1>
        <%= @cocktail.name %>
      </h1>
      <% if @cocktail.photo.stored_version %>
        <%= cl_image_tag @cocktail.photo, height: 300, crop: :fill %>
      <% else %>
      <%= cl_image_tag("mintjulep",
            width: 400, height: 300, crop: :fill) %>
      <% end %>
      <h2>Ingredients</h2>
      <ul>
        <% @cocktail.doses.each do |dose| %>
        <li> <%= dose.ingredient.name %> -- <%= dose.description %> <%= link_to '<i class="fa fa-trash-o" aria-hidden="true"></i>'.html_safe, dose_path(dose), method: :delete, data: {confirm: "Are you sure?"} %></li>
      <% end %>
      </ul>

      <%= link_to "add a dose", new_cocktail_dose_path(@cocktail)  %>
    </div>
  </div>
</div>
